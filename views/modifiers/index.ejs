<% include ../partials/header %>

<div class="content">
	<div class="center-text">
		<h1>List of All Modifiers</h1>
		<% modifiers.forEach(function(modifier) { %>
				<% if (modifier.isBuff === true) { %>
					<p class="mod-text success-border">
						<span class="mod-type success">Buff</span>
				<% } else { %>
					<p class="mod-text danger-border">
					<span class="mod-type danger">Nerf</span>
				<% } %>
				<%= modifier.text %>
			</p>
		<% }); %> 
			
	</div>
	<div class="links">
		<a class="btn neutral flush-left" href="/">Back</a>
	</div>

	<div class="row center-text">
    <% if (pages && pages > 0) { %>
    <ul class="center-text">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/modifiers">First</a></li>
        <% } %>
 
        <% if (current == 1) { %>
        <li class="disabled"><a>«</a></li>
        <% } else { %>
        <li><a href="/modifiers?page=<%= Number(current) - 1 %>">«</a></li>
        <% } %>
 
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/modifiers?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>»</a></li>
        <% } else { %>
        <li><a href="/modifiers?page=<%= Number(current) + 1 %>">»</a></li>
        <% } %>
 
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/modifiers?page=<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>

</div>
  	
<% include ../partials/footer %>
